// Map movement keys on some alphanumeric keys
default partial alphanumeric_keys
xkb_symbols "basic" {
  include "custom_movement(arrows)"
  include "custom_movement(navigation)"
};

partial alphanumeric_keys
xkb_symbols "arrows" {
  key.type[Group1] = "CUSTOM_THREE_LEVEL";

  // This maps to the s, d, f, g keys on QWERTY
  key <AC02> { [ NoSymbol, NoSymbol, Left  ] };
  key <AC03> { [ NoSymbol, NoSymbol, Down  ] };
  key <AC04> { [ NoSymbol, NoSymbol, Up    ] };
  key <AC05> { [ NoSymbol, NoSymbol, Right ] };
};

partial alphanumeric_keys
xkb_symbols "navigation" {
  key.type[Group1] = "CUSTOM_THREE_LEVEL";

  // This maps to the c, v, n, m keys on QWERTY
  key <AB03> { [ NoSymbol, NoSymbol, Home  ] };
  key <AB04> { [ NoSymbol, NoSymbol, Prior ] };
  key <AB06> { [ NoSymbol, NoSymbol, Next  ] };
  key <AB07> { [ NoSymbol, NoSymbol, End   ] };
};
